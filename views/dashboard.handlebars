<div class="container mt-5">
    <a href='/dashboard/add' class='btn btn-secondary' type='submit' id='new-post'>New Post</a>


    {{#each posts as |post|}}
    <div class="card mt-2 mb-2">
        <div class="card-header d-flex justify-content-between align-items-center">
            <a href='/dashboard/edit/{{id}}'>
                <h2>{{title}}</h2>
            </a>

            <h6 class='text-muted'>Posted By: {{user.username}} on {{format_date created_at}}</h6>
        </div>
        {{!-- <div class="card-body">
        <p class="card-text">{{content}}</p>
    </div> --}}
    </div>
    {{/each}}

</div>